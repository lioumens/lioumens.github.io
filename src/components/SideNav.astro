    </ul>

</div>
</nav>

<script>
    // document.querySelector(".hamburger").addEventListener("click", (event) => {
    //     document.querySelector(".top-drawer").classList.toggle("expanded");
    //     document.querySelector(".hamburger").classList.toggle("expanded");
    //     // document.querySelector("main").classList.toggle("expanded")
        
    //     document.
    // })

    // toggle navigation menu 
    const hamburger = document.querySelector(".hamburger");
    const drawer = document.querySelector(".top-drawer");

    hamburger.addEventListener("click", (event) => {
        drawer.classList.toggle("expanded");
        hamburger.classList.toggle("expanded");
    })

</script>

<style lang="scss" define:vars={{ activeNav, widthTrigger }}>
    @use "../styles/nord" as *;

    h2 {
        margin: 30px 0px 10px 0px;
    }
    a {
        text-decoration: none;   
    }
    .card {
        background-color: var(--widthTrigger);
		display: flex;
		flex-direction: column;
		width: 100%;
		text-align: center;
		align-items: center;
		justify-content: center;
		margin-top: 30px;
		margin-bottom: 20px;
	}
	.card img {
		border-radius: 300px;
		margin-bottom: 20px;
		margin-left: 20px;
		margin-right: 20px;
	}
	.card h2 {
		color: $nord6;
		margin-bottom: 0px;
	}
	.card h3 {
		color: #b0b0b0;
		margin-top: 0px;
	}
	.nav-divider {
		display: block;
		margin-top: 3px;
		width: 220px;
		height: 3px;
		background-color: $nord9;
		margin-left: 20px;
		margin-right: 20px;
	}
	nav.side {
        grid-area: sidenav;

		position: fixed;
		width: 250px;
        height: 100vh;
        // height: 100vh; // includingt his messes it up
		background-color: $nord1;
		
		display: flex;
		flex-direction: column;
		align-items: center;
		align-content: center;
		justify-items: center;

		box-shadow: 0px 5px 10px rgba(255, 255, 255, .1);
		
		// fill out the rest of sidebar nav
		padding-left: 0px;
		padding-right: 0px;
		
		
		& .nav-section {
			display: flex;
			flex-direction: column;
			align-content: space-between;
		}

		& a {
			color: $nord6;
			// padding: 10px 14px;
			text-decoration: none;
			font-size: 1.2rem;
            display: inline-block;
            width: 100%;
		}

		& ul {
			padding-left: 10px;
			position: relative;
		}

		& li {
			list-style-type: none;
			padding: 10px 20px;
			margin-left: 0px;
		}
		// Hover elements need to change math depending on how many elements
		& li:nth-child(1):hover ~ .active {
			top: 4.5%;
		}
		& li:nth-child(2):hover ~ .active {
			top: 29%;
		}
		& li:nth-child(3):hover ~ .active {
			top: 54%;
		}
		& li:nth-child(4):hover ~ .active {
			top: 79%;
		}
	}

	.active {
		height: 30px;
		width: 220px;
		background-color: $nord9;
		margin-left: 20px;
		border-radius: 5px;
		position: absolute;
		top: calc(var(--activeNav) * 25% + 4.5%); // might need to adjust this math for hover
		left:0;
		z-index: -1;
		box-shadow: 0 5px 10px rgba(255, 255, 255, .2);
		transition: top .15s cubic-bezier(0, 0, 0.38, 0.9);
	}

    nav.top {
        display: none;
        grid-area: topnav;
    }
@media screen and (max-width: 1200px) {
    html {
        scroll-padding-top: 50px;
    }
    nav.top {
        display: flex;
        flex-direction: column;
    }
    nav.side {
        display: none;
    }
    .top-strip {
        position: fixed;
        top: 0;
        left: 0;
        height: 50px; 
        padding: 20px; // total height of 45px;
        width: 100%;

        display: flex;
        justify-content: space-between;
        // justify-items: center;
        // align-content: center;
        align-items: center;
        z-index: 999;
        background-color: $nord1;
		box-shadow: 0px 5px 10px rgba(255, 255, 255, .1);
    }
    .top-blur {
        // 
        // padding: 20px;
        // margin-top:-20px;
        top: 0; left: 0;
        width: 100%;
        height: 20px;
        overflow: hidden;
        position: fixed;
        z-index: 1000;
        opacity: .7;
        filter: blur(9px);
        // background-color: purple;
    }
    .top-card {
        display: flex;
        flex-direction: row;
        align-items: center;
        & img {
            height: 30px;
            border-radius: 50px;
        }
        & h2 {
            margin-left: 15px;
            margin-top: 0px;
            margin-bottom: 0px;
            color: $nord4;
        //     margin-bottom: 20px;
        }
    }
    .hamburger {
        background-color: $nord1;
        height: 30px;
        width: 40px;
        margin-right: 15px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border-radius: 5px;
        & .line {
            display: block;
            height: 3px;
            margin-bottom: 2px;
            margin-top: 2px;
            width: 20px;
            background-color: var(--nord8);
            transition: transform .2s cubic-bezier(0.2, 0, 0.38, 0.9);
        }
        &:hover {
            background-color: $nord0;
            transition: background-color .2s cubic-bezier(0.2, 0, 0.38, 0.9);
        }
    }
    .hamburger.expanded .line:first-child {
        transform: translateY(7px) rotate(45deg);
        // transition: transform .2s ease-in;
    }
    .hamburger.expanded .line:nth-child(2) {
        opacity: 0;
    }
    .hamburger.expanded .line:last-child {
        transform: translateY(-7px) rotate(-45deg) ;
        // transition: transform .2s ease-in;
    }
    .top-drawer.expanded {
        top: 50px;
        opacity: 100%;
        transition: top .2s ease-in;

    }
    .top-drawer {
        position: fixed;
        background-color: cyan;
        top: -130px; // how large d
        left:0px;
        width: 100%;
        z-index: 50;
        transition: top .2s ease-out;
        
        & ul {
            // 4 items times 30 px;
            height: 160px;
            line-height: 40px;
            display: flex;
            flex-direction: column;
            // align-items: center;
            // align-items: stretch;
            // justify-items: stretch;
            justify-content: space-evenly;
            margin: 0px 0px;
            // padding-bottom: 5px;
            padding: 0 0 0 0px;
            // border-top: 1px solid $nord0;
            border-bottom: 2px solid $nord0;
            // box-shadow: 0px 2px 5px rgba(255, 255, 255, .1);
            // align-content: space-around;
            // margin-bottom: 20px;
        }
        & li {
            text-align: center;
            list-style-type: none;
            background-color: $nord1;
            color: $nord6;
        }
        & a {
            text-decoration: none;
            display: inline-block;
            width: 100%;
        }
        & li:hover {
            background-color: $nord0;
            color: $nord9;
            transition-property: background-color, color;
            transition-duration: .2s;
            transition-timing-function: ease-in;
        }

    }
}
</style>